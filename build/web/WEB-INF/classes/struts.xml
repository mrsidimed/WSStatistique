<struts>
 
    <package name="default" extends="json-default">

        <action name="sendStatistiqueOfAllOperators"  class="action.SearchAction" method="sendStatistiqueOfAllOperators">
             
            <result name="pd4ml">View/pd4ml.jsp</result>
            
        </action>
        

        
        <!-- returns a JSON array of Log objects -->
        <action name="searchLogs" class="action.SearchAction" method="searchLogs">
            <result type="json"/>
        </action>
        
        
        <action name="*" class="action.SearchAction" method="{1}" >
            <result type="json">
                <param name="excludeNullProperties">true</param>
                <param name="noCache">true</param> 
            </result>
        </action>
        
    </package>
    
    
    
